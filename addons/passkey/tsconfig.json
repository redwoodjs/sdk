{
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "jsx": "react-jsx",
    "target": "ES2022",
    "lib": ["ESNext"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "rwsdk/*": ["../../sdk/src/*"]
    },
    "module": "es2022",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types", "@types/react"]
  },
  "references": [{ "path": "../../sdk" }],
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
