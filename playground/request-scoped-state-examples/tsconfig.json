{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "ES2022"],
    "jsx": "react-jsx",
    "module": "es2022",
    "moduleResolution": "bundler",
    "types": ["./worker-configuration.d.ts", "./types/global.d.ts"],
    "paths": {
      "@/*": ["./src/*"],
      "rwsdk/*": ["../../sdk/src/*"]
    },
    "resolveJsonModule": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types/**/*", "worker-configuration.d.ts"],
  "exclude": ["node_modules", "dist"]
}
