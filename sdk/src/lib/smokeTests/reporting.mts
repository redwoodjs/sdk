    console.log("--------------------------------------------------");
    console.log(`Timestamp: ${timestamp}`);

    console.log(`Status: ${report.success ? "‚úÖ PASSED" : "‚ùå FAILED"}`);

    console.log(`Exit code: ${state.exitCode}`);
    if (report.workerName) {
