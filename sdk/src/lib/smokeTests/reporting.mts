/**
 * Maps a test status to a display string with emoji
 */
function formatTestStatus(status: TestStatusValue): string {
  switch (status) {
    case "PASSED":
      return "‚úÖ PASSED";
    case "FAILED":
      return "‚ùå FAILED";
    case "SKIPPED":
      return "‚è© SKIPPED";
    case "DID_NOT_RUN":
      return "‚ö†Ô∏è DID NOT RUN";
    default:
      return "‚ùì UNKNOWN";
  }
}

/**
 * Generates the final test report without doing any resource cleanup.
